<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.ProgressPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
            <Label Text="Прогрес"
                Margin="0,50"
                FontSize="32"
                VerticalOptions="StartAndExpand" 
                HorizontalOptions="CenterAndExpand" />
                <BoxView BackgroundColor="Silver" HeightRequest="4" HorizontalOptions="FillAndExpand"/>
                <Image x:Name="CSharpLogo" HeightRequest="150" Source="CSharp.png" BackgroundColor="Transparent" Margin="15,-5,0,0"></Image>
                <ProgressBar x:Name="CSharpBar"
                VerticalOptions="End"
                BackgroundColor="LawnGreen"
                Margin="50,50,50,500"/>
                <BoxView BackgroundColor="Silver" HeightRequest="4" HorizontalOptions="FillAndExpand"/>
                <Image x:Name="CppLogo" HeightRequest="150" Source="Cpp.png" BackgroundColor="Transparent" Margin="15,-5,0,0"></Image>
                <ProgressBar x:Name="CppBar"
                VerticalOptions="End"
                BackgroundColor="LawnGreen"
                Margin="50,50,50,500"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>