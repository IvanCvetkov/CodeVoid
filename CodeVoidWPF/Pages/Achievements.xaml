                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="79*"/>
                                        <ColumnDefinition Width="71*"/>
                                    </Grid.ColumnDefinitions>
                                    <materialDesign:PackIcon Kind="VisualStudio" VerticalAlignment="Center" Margin="54,-34,0,16" Height="34" Width="42" Grid.ColumnSpan="2"/>
