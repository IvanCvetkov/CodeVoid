                                Storyboard.TargetName="MethodsAnim"
                                Storyboard.TargetProperty="Y"
                                AutoReverse="True" RepeatBehavior="Forever">
                                <DoubleAnimation.EasingFunction>
                                    <BounceEase Bounces="1" EasingMode="EaseOut"
                                            Bounciness="7" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>
        <Button x:Name="Classes" Style="{DynamicResource CircleButton}" Width="155" Height="57" Click="Classes_Click" Margin="293,236,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1">
            <materialDesign:PackIcon Kind="DesktopMac" Height="52" Width="126"/>
            <Button.RenderTransform>
                <TranslateTransform x:Name="ClassesAnim" X="0" Y="0"/>
            </Button.RenderTransform>
            <Button.Triggers>
                <EventTrigger RoutedEvent="Window.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation From="5" To="0" Duration="00:00:01"
                                Storyboard.TargetName="ClassesAnim"
                                Storyboard.TargetProperty="Y"
                                AutoReverse="True" RepeatBehavior="Forever">
                                <DoubleAnimation.EasingFunction>
                                    <BounceEase Bounces="1" EasingMode="EaseOut"
                                            Bounciness="7" />
                                </DoubleAnimation.EasingFunction>
