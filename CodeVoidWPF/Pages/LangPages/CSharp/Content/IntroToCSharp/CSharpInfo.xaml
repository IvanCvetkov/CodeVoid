        </Button>
        <Button x:Name="Methods" Style="{DynamicResource CircleButton}" Width="155" Height="63" Click="Methods_Click" Margin="45,357,0,772" HorizontalAlignment="Left" Grid.Row="1" Background="#FF7806B9">
            <materialDesign:PackIcon Kind="Mastodon" Height="52" Width="126"></materialDesign:PackIcon>
            <Button.RenderTransform>
