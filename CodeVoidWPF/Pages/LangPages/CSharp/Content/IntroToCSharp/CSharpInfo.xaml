<Page x:Class="CodeVoidWPF.Pages.LangPages.CSharp.CSharpInfo"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CodeVoidWPF.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      Background="{DynamicResource MaterialDesignPaper}"
      FontFamily="{DynamicResource MaterialDesignFont}"
      mc:Ignorable="d"
     Title="CSharpInfo" Height="3000" Width="3000">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Padding="30" FontSize="30" Grid.Row="0" Text="Let's get started with programming in C#!" Margin="1,0,-151,106"/>
        <Rectangle HorizontalAlignment="Stretch" Fill="Blue" Grid.Column="3" Height="4" Margin="10,84,-104,114" Grid.ColumnSpan="2"/>
        <Button x:Name="Introduction" Width="154" Height="63" Click="Introduction_Click" Margin="156,125,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Background="#FF7806B9">
            <materialDesign:PackIcon Kind="Dangerous" Height="53" Width="124"/>
            <Button.RenderTransform>
                <TranslateTransform x:Name="IntroductionAnim" X="0" Y="0"/>
            </Button.RenderTransform>
            <Button.Triggers>
                <EventTrigger RoutedEvent="Window.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation From="0" To="10" Duration="00:00:00:01"
                                Storyboard.TargetName="IntroductionAnim"
                                Storyboard.TargetProperty="Y"
                                AutoReverse="True" RepeatBehavior="Forever">
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>
        <Button x:Name="Variables" Style="{DynamicResource CircleButton}" Width="155" Height="63" Click="Variables_Click" Margin="45,21,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Background="#FF7806B9">
            <materialDesign:PackIcon Kind="Variable" Height="63" Width="126"></materialDesign:PackIcon>
            <Button.RenderTransform>
                <TranslateTransform x:Name="VariablesAnim" X="0" Y="0"/>
            </Button.RenderTransform>
            <Button.Triggers>
                <EventTrigger RoutedEvent="Window.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation From="0" To="5" Duration="00:00:01"
                                Storyboard.TargetName="VariablesAnim"
                                Storyboard.TargetProperty="Y"
                                AutoReverse="True" RepeatBehavior="Forever">
                                <DoubleAnimation.EasingFunction>
                                    <BounceEase Bounces="1" EasingMode="EaseOut"
                                            Bounciness="7" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>
        <TextBlock FontSize="26" Text="Variables" Margin="45,203,484,1160" Grid.RowSpan="2"/>
        <Button x:Name="Arrays" Width="155" Style="{DynamicResource CircleButton}" Height="63" Click="Arrays_Click" Margin="293,21,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1">
            <materialDesign:PackIcon Kind="CodeBrackets" Height="56" Width="126"></materialDesign:PackIcon>
            <Button.RenderTransform>
                <TranslateTransform x:Name="ArraysAnim" X="0" Y="0"/>
            </Button.RenderTransform>
            <Button.Triggers>
                <EventTrigger RoutedEvent="Window.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation From="5" To="0" Duration="00:00:01"
                                Storyboard.TargetName="ArraysAnim"
                                Storyboard.TargetProperty="Y"
                                AutoReverse="True" RepeatBehavior="Forever">
                                <DoubleAnimation.EasingFunction>
                                    <BounceEase Bounces="1" EasingMode="EaseOut"
                                            Bounciness="7" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>
        <Button x:Name="Operators" Style="{DynamicResource CircleButton}" Width="155" Height="Auto" Click="Operators_Click" Margin="45,130,0,1000" HorizontalAlignment="Left" Grid.Row="1" Background="#FF7806B9">
            <materialDesign:PackIcon Kind="Number0BoxMultipleOutline" Height="52" Width="126"></materialDesign:PackIcon>
            <Button.RenderTransform>
                <TranslateTransform x:Name="OperatorsAnim" X="0" Y="0"/>
            </Button.RenderTransform>
            <Button.Triggers>
                <EventTrigger RoutedEvent="Window.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation From="0" To="5" Duration="00:00:01"
                                Storyboard.TargetName="OperatorsAnim"
                                Storyboard.TargetProperty="Y"
                                AutoReverse="True" RepeatBehavior="Forever">
                                <DoubleAnimation.EasingFunction>
                                    <BounceEase Bounces="1" EasingMode="EaseOut"
                                            Bounciness="7" />
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Button.Triggers>
        </Button>
        <TextBlock FontSize="26" Text="Arrays" Margin="293,198,236,1165" Grid.RowSpan="2"/>
        <Button x:Name="NumSystems" Width="197" Height="Auto" Click="NumSystems_Click" Margin="871,150,0,0" HorizontalAlignment="Left" Grid.Row="0" BorderBrush="Black" Foreground="#DD7CFF10" Background="Black">
            <materialDesign:PackIcon Kind="Matrix" Height="52" Width="126"></materialDesign:PackIcon>
            <Button.RenderTransform>
